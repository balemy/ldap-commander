<?xml version="1.0"?>
<psalm
    errorLevel="1"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    findUnusedCode="false"
    ensureOverrideAttribute="false"
>
    <issueHandlers>
        <ImplicitToStringCast errorLevel="suppress"/>
        <RiskyTruthyFalsyComparison errorLevel="suppress"/>
        <UndefinedMagicMethod errorLevel="suppress"/>
        <UndefinedMagicPropertyFetch errorLevel="suppress"/>
    </issueHandlers>

    <projectFiles>
        <directory name="src"/>
        <file name="public/index.php"/>
        <file name="cmda"/>
        <file name="autoload.php"/>
        <ignoreFiles>
            <directory name="vendor"/>
            <directory name="src/Modules/*/Views/"/>
            <directory name="src/Views/"/>
            <directory name="src/Modules/ServerConfig"/>
            <directory name="tests/Support/_generated"/>
        </ignoreFiles>
    </projectFiles>
</psalm>

